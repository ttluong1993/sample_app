<% @user ||= current_user %>
<div class="stats">
  <%= link_to user_relationships_path user_id: @user.id,
    relationship: "following" do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  <% end %>
  <%= link_to user_relationships_path user_id: @user.id, 
    relationship: "followers" do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  <% end %>
</div>
